    "eslint": "^8.30.0",
    "eslint-config-next": "^13.1.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.4",
    "rome": "^11.0.0",
    "typescript": "^4.9.4"
